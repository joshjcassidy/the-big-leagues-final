<%= form_for :player_profile, url: player_profile_path(@player_profile), method: :patch do |f| %>
    <h2>Edit Profile Details</h2>
    <div class="field">
        <%= f.label :playerTag, 'Player Tag' %><br />
        <%= f.text_field :playerTag, class: "form-control" %>
    </div>

    <div class="field">
        <%= f.label :firstName, 'First Name' %><br />
        <%= f.text_field :firstName, class: "form-control" %>
    </div>

    <div class="field">
        <%= f.label :lastName, 'Last Name' %><br />
        <%= f.text_field :lastName, class: "form-control" %>
    </div>

    <div class="field">
        <%= f.label :bio, 'Player Bio' %><br />
        <%= f.text_area :bio, class: "form-control" %>
    </div>

    <div class="field">
        <%= f.label :dob, 'Date of Birth' %><br />
        <%= f.date_select :dob, start_year: Time.now.year, end_year: 1900 %>
    </div>

    <div class="field">
        <%= f.label :country_id, 'Country of Residence' %><br />
        <% options = options_from_collection_for_select(Country.all, 'id', 'name') %>
        <%= f.select :country_id,  options, class: "form-control" %>
    </div>

    <div class="field">
        <%= f.label :twitterHandle, 'Twitter Handle' %><br />
        <%= f.text_field :twitterHandle, class: "form-control" %>
    </div>

    <div class="field">
        <%= f.label :twitchHandle, 'Twitch Handle' %><br />
        <%= f.text_field :twitchHandle, class: "form-control" %>
    </div>

    <br />
    <div class="actions">
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </div>
<% end %>