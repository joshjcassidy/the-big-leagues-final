<%= form_for @manager_profile, url: manager_profiles_path(@manager_profile.id) do |f| %>
    <h2>Team Details</h2>
    <div class="field">
        <%= f.label :teamName, 'Team Name' %><br />
        <%= f.text_field :teamName %>
    </div>

    <div class="field">
        <%= f.label :description, 'Team Bio' %><br />
        <%= f.text_area :description %>
    </div>

    <div class="field">
        <%= f.label :managerFName, 'Manager\'s First Name' %><br />
        <%= f.text_field :managerFName %>
    </div>

    <div class="field">
        <%= f.label :managerLName, 'Manager\'s Surname' %><br />
        <%= f.text_field :managerLName %>
    </div>

    <div class="field">
        <%= f.label :sponsorsAndPartners, 'Sponsors and Partners' %><br />
        <%= f.text_area :sponsorsAndPartners %>
    </div>

    <div class="field">
        <%= f.label :country_id, 'Founding Country'%><br />
        <% options = options_from_collection_for_select(Country.all, 'id', 'name') %>
        <%= f.select :country_id,  options %>
    </div>

    <div class="field">
        <%= f.label :twitterHandle, 'Twitter Handle' %><br />
        <%= f.text_field :twitterHandle %>
    </div>

    <div class="field">
        <%= f.label :siteUrl, 'Site URL' %><br />
        <%= f.text_field :siteUrl %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="actions">
        <%= f.submit %>
    </div>

    <% end %>